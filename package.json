{
  "name": "@dxdeveloperexperience/git-webhooks",
  "version": "0.0.0",
  "description": "Git Webhooks is an easy-to-use Open-Source REST API allowing you to interact with GIT events. This NestJS API expose a set of customizable rules to automate your project's life cycle.",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && (cp src/rules/rules.yml dist/rules/rules.yml) && (cp config.env dist/config.env)",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier-test": "prettier -l \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ci": "jest --clearCache && npm-run-all prettier-test lint test",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "tsdoc": "typedoc --out tsdoc src"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run ci"
    }
  },
  "dependencies": {
    "@nestjs/common": "5.7.2",
    "@nestjs/core": "5.7.2",
    "@nestjs/microservices": "5.7.2",
    "@nestjs/testing": "5.7.2",
    "@nestjs/websockets": "5.7.2",
    "class-transformer": "0.2.0",
    "dotenv": "6.2.0",
    "fs": "0.0.1-security",
    "github-release-notes": "0.17.0",
    "googleapis": "27.0.0",
    "js-yaml": "3.12.1",
    "mustache": "3.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/express": "4.16.1",
    "@types/jest": "24.0.6",
    "@types/js-yaml": "3.12.0",
    "@types/node": "11.9.4",
    "@types/supertest": "2.0.7",
    "coveralls": "3.0.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "supertest": "3.4.2",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.2",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.13.0",
    "typedoc": "0.14.2",
    "typescript": "3.3.3",
    "vuepress": "1.0.0-alpha.42"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "src"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "webhook",
    "github",
    "gitlab",
    "git",
    "CI",
    "opensource",
    "FaaS"
  ]
}
