--- # Rules config file

options:
  executeAllRules: true
  enableRules: false
  enableGroups: false
  allRuleResultInOne: false

rules:
  - name: checkCoverage
    options:
      allowDecrease: false
      provider: coveralls
    onSuccess:
      - callback: LoggerRunnable
        args:
          message: 'Everything is ok'
    onError:
      - callback: LoggerRunnable
        args:
          message: 'NOOOOP'
  